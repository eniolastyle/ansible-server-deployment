<VirtualHost *:80>
    ServerName {{ ansible_hostname }}
    ServerAdmin webmaster@localhost

    DocumentRoot /var/www/flask_app

    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined

    <Directory /var/www/flask_app>
        Require all granted
    </Directory>
</VirtualHost>
